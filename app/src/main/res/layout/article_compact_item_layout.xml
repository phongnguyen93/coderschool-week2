<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
		android:layout_height="64dp"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		app:cardElevation="@dimen/card_elevation"
		app:cardCornerRadius="@dimen/card_corner_radius"
		xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<ImageView
				android:adjustViewBounds="true"
				android:id="@+id/img_cover"
				android:layout_width="64dp"
				android:layout_height="match_parent"/>

		<TextView
				android:layout_toRightOf="@+id/img_cover"
				android:layout_toEndOf="@+id/img_cover"
				android:id="@+id/tv_headline"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/LightHeadlineTextStyle"/>

		<TextView
				android:layout_toRightOf="@+id/img_cover"
				android:layout_toEndOf="@+id/img_cover"
				android:layout_below="@+id/tv_headline"
				android:id="@+id/tv_snippet"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/LightSubHeadlineTextStyle"
				/>

	</RelativeLayout>
</android.support.v7.widget.CardView>